<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <h3>Fill the Form for create a new listing</h3>
                <form method="post" action="/listings" class="needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <lable for="title" class="form-label">Title</lable>
                        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="description" class="form-label">Description</lable>
                        <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Enter right description please
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="image" class="form-label">Upload Image</lable>
                        <input name="listing[image]" type="file" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="Enter price" type="number" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right price please
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="location" class="form-label">Location</lable>
                        <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right location please
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right country please
                        </div>
                    </div>

                    <button class="btn btn-dark add-btn mt-3">Submit</button>
                </form>
            </body>
        </div>
    </div>