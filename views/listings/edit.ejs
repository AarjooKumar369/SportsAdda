<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <h3>Edit the listing</h3>
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation"
                    novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <lable for="title" class="form-label">Title</lable>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Enter Right Title here
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="description" class="form-label">Description</lable>
                        <textarea name="listing[description]" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Enter right description please
                        </div>
                    </div>

                    <div class="mb-3">
                        Original Listing Image <br>
                        <img src="<%= originalImageUrl  %>">
                    </div>
                    <div class="mb-3">
                        <lable for="image" class="form-label">Upload New Image</lable>
                        <input name="listing[image]" type="file" class="form-control">
                    </div>

                    <div class="mb-3">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right price please
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="location" class="form-label">Location</lable>
                        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right location please
                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter right country please
                        </div>
                    </div>

                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
                </form>
            </body>
        </div>
    </div>

    <script src="/public/js/script.js"></script>